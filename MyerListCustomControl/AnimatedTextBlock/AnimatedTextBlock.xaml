<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyerListCustomControl">
        <Style TargetType="local:AnimatedTextBlock">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AnimatedTextBlock">
                    <Grid x:Name="RootGrid"  HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock x:Name="TB1"  FontFamily="Microsoft JhengHei UI" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Left" FontWeight="{TemplateBinding FontWeight}" FontStyle="{TemplateBinding FontStyle}" FontSize="{TemplateBinding FontSize}" Text="" >
                        </TextBlock>
                        <TextBlock x:Name="TB2"  FontFamily="Microsoft JhengHei UI" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Left" FontWeight="{TemplateBinding FontWeight}" FontStyle="{TemplateBinding FontStyle}" FontSize="{TemplateBinding FontSize}" Text="" >
                        </TextBlock>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
