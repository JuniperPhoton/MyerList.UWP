<UserControl x:Class="MyerList.UC.LoadingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:MyerList.UC"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid x:Name="RootGrid"
          Grid.RowSpan="2"
          Margin="-40">
        <Border Background="Black" Opacity="0.7" />
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <ProgressRing Width="50"
                          Height="50"
                          Background="{x:Null}"
                          Foreground="{StaticResource MyerListLight}"
                          IsActive="True" />
            <TextBlock x:Uid="LoadingTB"
                       FontFamily="{StaticResource MyerListThemeFontFamily}"
                       FontSize="26.667"
                       Foreground="White"
                       Text="Loading"
                       TextAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
