<Grid x:Name="TileGrid" Grid.Row="1" Background="White" xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'
                        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'
                        xmlns:mc='http://schemas.openxmlformats.org/markup-compatibility/2006'>
  <Grid x:Name="LargeGrid"  HorizontalAlignment="Center" Height="310" VerticalAlignment="Center" Width="310" Grid.RowSpan="2" >
    <Border x:Name="LargeBackGrd" BorderThickness="0" Background="#FF47A5DD"/>
    <StackPanel Orientation="Vertical" Margin="2,27,10,7" VerticalAlignment="Top" Opacity="0.8">
      <TextBlock x:Name="LargeText0"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,5,0,0" FontSize="18.667" Foreground="White" Text="文本Text" />
      <TextBlock x:Name="LargeText1"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,2,0,0" FontSize="18.667" Foreground="White" Text="文本Text" />
      <TextBlock x:Name="LargeText2"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,2,0,0" FontSize="18.667" Foreground="White" Text="文本Text" />
      <TextBlock x:Name="LargeText3"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,2,50,0" FontSize="18.667" Foreground="White" Text="文本Text" />
      <TextBlock x:Name="LargeText4"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,5,0,0" FontSize="18.667" Foreground="White" Text="文本Text" />
      <TextBlock x:Name="LargeText5"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,2,0,0" FontSize="18.667" Foreground="White" Text="文本Text" />
      <TextBlock x:Name="LargeText6"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,2,0,0" FontSize="18.667" Foreground="White" Text="文本Text" />
      <TextBlock x:Name="LargeText7"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,2,50,0" FontSize="18.667" Foreground="White" Text="文本Text" />
      <TextBlock x:Name="LargeText8"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,2,50,0" FontSize="18.667" Foreground="White" Text="文本Text" />
    </StackPanel>
    <StackPanel Orientation="Horizontal" Margin="10,5,4,0" HorizontalAlignment="Left" VerticalAlignment="Top">
      <TextBlock x:Name="LargeTitleTB" TextWrapping="Wrap" Text="TO-DO" FontSize="21.333"  TextAlignment="Right" Foreground="White"  HorizontalAlignment="Center" Margin="3,0,0,0" VerticalAlignment="Bottom" FontWeight="SemiBold"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Margin="0,0,8,5" HorizontalAlignment="Right" VerticalAlignment="Bottom">
      <Image Source="ms-appx:///Assets/NewLogo_white.png" Height="30" Width="30" Margin="0"/>
      <TextBlock x:Name="LargeCount" TextWrapping="Wrap" Text="4" FontSize="29.333"  TextAlignment="Right" Foreground="White" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
    </StackPanel>
  </Grid>
  <Grid x:Name="WideGrid"  HorizontalAlignment="Center" Height="150" VerticalAlignment="Center" Width="310" Grid.RowSpan="2" >
    <Border x:Name="WideBackGrd" BorderThickness="0"/>
    <StackPanel Orientation="Vertical" Margin="2,27,10,7" VerticalAlignment="Top" Opacity="0.8">
      <TextBlock x:Name="WideText0"    TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,5,0,0" FontSize="18.667" Foreground="White" Text="文本Text" />
      <TextBlock x:Name="WideText1"    TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,2,0,0" FontSize="18.667" Foreground="White" Text="文本Text" />
      <TextBlock x:Name="WideText2"    TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,2,0,0" FontSize="18.667" Foreground="White" Text="文本Text" />
      <TextBlock x:Name="WideText3"    TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,2,50,0" FontSize="18.667" Foreground="White" Text="文本Text" />
    </StackPanel>
    <StackPanel Orientation="Horizontal" Margin="10,5,4,0" HorizontalAlignment="Left" VerticalAlignment="Top">
      <TextBlock x:Name="WideTitleTB" TextWrapping="Wrap" Text="TO-DO" FontSize="21.333"  TextAlignment="Right" Foreground="White"  HorizontalAlignment="Center" Margin="3,0,0,0" VerticalAlignment="Bottom" FontWeight="SemiBold" />
    </StackPanel>
    <StackPanel Orientation="Horizontal" Margin="0,0,8,5" HorizontalAlignment="Right" VerticalAlignment="Bottom">
      <Image Source="ms-appx:///Assets/NewLogo_white.png" Height="30" Width="30" Margin="0"/>
      <TextBlock x:Name="WideCount" TextWrapping="Wrap" Text="4" FontSize="29.333"  TextAlignment="Right" Foreground="White" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
    </StackPanel>
  </Grid>
  <Grid x:Name="MiddleGrid"  HorizontalAlignment="Center" Height="150" VerticalAlignment="Center" Width="150">
    <Border x:Name="MiddleBackGrd" BorderThickness="0" Background="{StaticResource MyerListBlueLight}"/>
    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
      <TextBlock x:Name="MiddleTitleTB" TextWrapping="NoWrap" Text="TO-DO" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,5" FontWeight="SemiBold"   FontSize="20"/>
    </StackPanel>
    <TextBlock x:Name="MiddleCount" TextWrapping="Wrap" Text="10" FontSize="33.333" FontWeight="Bold" TextAlignment="Right" Foreground="White" Margin="0,0,5,0" VerticalAlignment="Bottom" HorizontalAlignment="Right"   Height="45"/>
    <StackPanel Orientation="Vertical" Opacity="0.8">
      <TextBlock x:Name="MiddleText0"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,10,0,0" FontSize="18" Foreground="White"   Text="TEXT" />
      <TextBlock x:Name="MiddleText1"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,3,0,0" FontSize="18" Foreground="White"   Text="TEXT" />
      <TextBlock x:Name="MiddleText2"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,3,0,0" FontSize="18" Foreground="White"   Text="TEXT" />
      <TextBlock x:Name="MiddleText3"  TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,3,0,0" FontSize="18" Foreground="White"   Text="TEXT" />
    </StackPanel>
  </Grid>
  <Grid x:Name="SmallGrid"  HorizontalAlignment="Center" Height="71" VerticalAlignment="Center" Width="71" Margin="50,215" >
    <Border x:Name="SmallBackGrd" BorderThickness="1" Background="{StaticResource MyerListBlueLight}"/>
    <TextBlock x:Name="SmallCount" TextWrapping="Wrap" Text="3" VerticalAlignment="Center" FontSize="22.667" FontWeight="Bold" TextAlignment="Right" Foreground="White" Margin="25,0,0,0" HorizontalAlignment="Center"  />
  </Grid>
  <Border Background="White"/>
</Grid>