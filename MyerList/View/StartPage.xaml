    </base:BindablePage.Resources>
    <base:BindablePage.Background>
        <StaticResource ResourceKey="MyerListGray"/>
    </base:BindablePage.Background>


    <Grid Background="{StaticResource MyerListGray}">

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Image x:Name="image" Source="ms-appx:///Assets/back.png" Stretch="UniformToFill" Grid.RowSpan="2" Grid.ColumnSpan="2" Opacity="0.02" Margin="0"/>
        <StackPanel x:Name="textBlock" Orientation="Vertical" Margin="0" VerticalAlignment="Center" Grid.RowSpan="2" >
            <StackPanel.RenderTransform>
                <CompositeTransform/>
            </StackPanel.RenderTransform>
            <Image x:Name="image1" Source="ms-appx:///Assets/SOLID_WHITE_500.png" Width="250" RenderTransformOrigin="0.5,0.5" Opacity="0" MaxWidth="800" >
                <Image.RenderTransform>
                    <CompositeTransform TranslateY="-50"/>
                </Image.RenderTransform>
            </Image>
            <StackPanel x:Name="stackPanel" RenderTransformOrigin="0.5,0.5" Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Center" Opacity="0">
                <StackPanel.RenderTransform>
                    <CompositeTransform TranslateY="-50"/>
                </StackPanel.RenderTransform>

                <TextBlock Text="Myer" FontSize="25" FontWeight="Light" FontFamily="Microsoft JhengHei UI" Foreground="{StaticResource MyerListBlueLight}" />
                <TextBlock Text="List" FontSize="25" FontWeight="Bold" FontFamily="Microsoft JhengHei UI" Foreground="{StaticResource MyerListBlueLight}"/>
            </StackPanel>
            <TextBlock x:Name="textBlock1" 
                       x:Uid="SubtitleTB"
        	Foreground="{StaticResource MyerListDark}" 
        	FontSize="15" 
        	FontFamily="Microsoft JhengHei UI" 
        	VerticalAlignment="Center"  TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="0,20,0,0" FontWeight="Light" Opacity="0">
                <TextBlock.RenderTransform>
                    <CompositeTransform TranslateY="-50"/>
                </TextBlock.RenderTransform>
        	<Run Text="Sync your To-dos over "/>
        	<Run  Text="Windows "/>
            </TextBlock>
            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,20,0,0" VerticalAlignment="Bottom">
                <Button x:Name="button" Grid.Row="1"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="20,0"
                    Height="40"
                    Foreground="White"
                    BorderThickness="0"
                    Command="{x:Bind StartVM.NavigateToLoginCommand}" 
                    RenderTransformOrigin="0.5,0.5" 
                    MaxWidth="400" Style="{StaticResource ButtonCommonStyle}" Opacity="0" 
                    >
                    <Border Background="{StaticResource MyerListBlueLight}" BorderBrush="#FF4C83C9">
                        <TextBlock Text="Login" FontSize="15"  x:Uid="LoginTB" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource MyerListGray}" FontFamily="Microsoft JhengHei UI"/>
                    </Border>
                    <Button.RenderTransform>
                        <CompositeTransform TranslateY="-50"/>
                    </Button.RenderTransform>
                </Button>
                <Button x:Name="button1" Grid.Row="1"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                Margin="20,5,20,0"
                Background="{x:Null}"
                Foreground="{StaticResource MyerListBlue}"
                Height="40"
                BorderThickness="1"
                Command="{x:Bind StartVM.NavigateToRegisterCommand}" 
                RenderTransformOrigin="0.5,0.5" 
                MaxWidth="400" Style="{StaticResource ButtonCommonStyle}" BorderBrush="{x:Null}" Opacity="0">
                    <Button.RenderTransform>
                        <CompositeTransform TranslateY="-50"/>
                    </Button.RenderTransform>
                    <Border BorderThickness="2" Background="Gainsboro" BorderBrush="Gainsboro">
                        <TextBlock Text="Register" FontSize="15"  x:Uid="RegisterTB"  FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource MyerListDark}" FontFamily="Microsoft JhengHei UI"/>
                    </Border>
                </Button>
                <Button x:Name="OfflineBtn" Grid.Row="1"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                Margin="20,5,20,50"
                Background="{x:Null}"
                Foreground="{StaticResource MyerListBlue}"
                Height="40"
                BorderThickness="1"
                Command="{x:Bind StartVM.NavigateToOfflineModeCommand}" 
                RenderTransformOrigin="0.5,0.5" 
                MaxWidth="400" Style="{StaticResource ButtonCommonStyle}" BorderBrush="{x:Null}" Opacity="0">
                    <Button.RenderTransform>
                        <CompositeTransform TranslateY="-50"/>
                    </Button.RenderTransform>
                    <Border BorderThickness="2" Background="#FFE7E7E7" BorderBrush="#FFE7E7E7">
                        <TextBlock Text="Offline Mode" FontSize="15"  x:Uid="OfflineTB"  FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource MyerListDark}" FontFamily="Microsoft JhengHei UI"/>
                    </Border>
                </Button>

            </StackPanel>

        </StackPanel>


    </Grid>

</base:BindablePage>
