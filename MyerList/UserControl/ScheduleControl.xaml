<UserControl
    x:Class="MyerList.UC.ScheduleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyerList"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Converter="using:MyerList.Converter"
    mc:Ignorable="d"
    d:DesignHeight="35"
    d:DesignWidth="400">
    <UserControl.Resources>
        <Storyboard x:Name="BackStory">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" Storyboard.TargetName="SchduleTempleteGrid">
                <EasingDoubleKeyFrame x:Name="StartX" KeyTime="0" Value="266"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="ShowGreenStory">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Storyboard.TargetName="border">
                <EasingColorKeyFrame KeyTime="0" Value="#00E2E2E2"/>
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="#FF4BB685"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="HideGreenStory">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Storyboard.TargetName="border">
                <SplineColorKeyFrame KeyTime="0" Value="#FF4BB685"/>
                <SplineColorKeyFrame KeyTime="0:0:0.3" Value="#00E2E2E2"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="ShowRedStory">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Storyboard.TargetName="border">
                <EasingColorKeyFrame KeyTime="0" Value="#00E2E2E2"/>
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="#FFB64B50"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="HideRedStory">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Storyboard.TargetName="border">
                <SplineColorKeyFrame KeyTime="0" Value="#FFB64B50"/>
                <SplineColorKeyFrame KeyTime="0:0:0.3" Value="#00E2E2E2"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="GoSortStory">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="button">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-30"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="button1">
                <EasingDoubleKeyFrame KeyTime="0" Value="30"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="LeaveSortStory">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="button">
                <SplineDoubleKeyFrame KeyTime="0" Value="-30"/>
                <SplineDoubleKeyFrame KeyTime="0:0:0.4" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="button1">
                <SplineDoubleKeyFrame KeyTime="0" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="0:0:0.4" Value="30"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
    <Grid x:Name="SchduleTempleteGrid"  Tag="{Binding ID}" PointerEntered="SchduleTempleteGrid_OnPointerEntered" ManipulationMode="System,TranslateX" d:DesignWidth="320.167" RenderTransformOrigin="0.5,0.5" Height="35">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RenderTransform>
            <CompositeTransform/>
        </Grid.RenderTransform>
        <Border x:Name="border"  BorderThickness="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="0" Background="#004BB685"/>
        <Grid x:Name="LeftSP" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding MainVM.ShowCategory,Converter={StaticResource ToDoRawCol1Converter}, Mode=OneWay,Source={StaticResource Locator}}"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button
                    Visibility="{Binding MainVM.ShowCategory,Mode=OneWay,Source={StaticResource Locator}}"
                    Width="20"
                    Padding="0"
                    Style="{StaticResource ButtonCommonStyle}"
                    Command="{Binding MainVM.ChangeCateCommand,Mode=OneWay, Source={StaticResource Locator}}"
                    CommandParameter="{Binding ID}"
                    Background="{x:Null}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid>
                    <Border Background="White" Opacity="0.001"/>
                    <Ellipse Width="15" Height="15" Fill="{Binding Category,Converter={StaticResource CateColorConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Grid>
            </Button>
            <Grid Grid.Column="1" VerticalAlignment="Stretch" Grid.RowSpan="1" Margin="0" >
                <TextBlock FontWeight="Light"  Text="{Binding Content}" VerticalAlignment="Center" Grid.Column="1" FontSize="15" Foreground="#FF474747" Margin="10,0,0,0" TextTrimming="WordEllipsis" FontFamily="Microsoft JhengHei UI" HorizontalAlignment="Left">
                    <ToolTipService.ToolTip>
                        <TextBlock Text="{Binding Content}" Margin="5" TextWrapping="Wrap"/>
                    </ToolTipService.ToolTip>
                </TextBlock>
                <Border Background="#FF888888" Visibility="{Binding IsDone, Converter={StaticResource ShowDoneLineConverter}}" BorderThickness="0" Height="1" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.Clip>
                <RectangleGeometry Rect="0 0 30 30"/>
            </Grid.Clip>
            <Button x:Name="button" MinHeight="0" MinWidth="0" Padding="0" Margin="0" Style="{StaticResource ButtonCommonStyle}" 
                Command="{Binding MainVM.DeleteCommand,Mode=OneWay, Source={StaticResource Locator}}"
                CommandParameter="{Binding ID}" HorizontalAlignment="Stretch" Background="{x:Null}" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Stretch">
                <Button.RenderTransform>
                    <CompositeTransform/>
                </Button.RenderTransform>
                <SymbolIcon Symbol="Delete" Foreground="#FFC2C2C2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20"/>
            </Button>
            <Button x:Name="button1" Padding="0" Margin="0" IsHitTestVisible="False" Style="{StaticResource ButtonCommonStyle}" 
                Command="{Binding MainVM.DeleteCommand,Mode=OneWay, Source={StaticResource Locator}}"
                CommandParameter="{Binding ID}" HorizontalAlignment="Center" Background="{x:Null}" Height="27" Width="26" Foreground="{x:Null}" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <CompositeTransform TranslateX="30"/>
                </Button.RenderTransform>
                <SymbolIcon x:Name="symbolIcon" Symbol="Sort" Foreground="#FFC2C2C2"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
