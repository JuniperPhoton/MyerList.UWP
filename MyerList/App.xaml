<Application
    x:Class="MyerListUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:MyerListUWP.Common"
    xmlns:vm="using:MyerList.ViewModel"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionary/ColorDictionary.xaml" />
                <ResourceDictionary Source="/ResourceDictionary/StyleDictionary.xaml" />
                <ResourceDictionary Source="/ResourceDictionary/TemplateDictionary.xaml" />
                <ResourceDictionary Source="/ResourceDictionary/ConverterDictionary.xaml" />
                <ResourceDictionary Source="/ResourceDictionary/StringDictionary.xaml" />
                <ResourceDictionary Source="/ResourceDictionary/BrushDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <vm:ViewModelLocator x:Key="Locator" />
            <common:AppSettings x:Key="AppSettings" />
            <FontFamily x:Key="MyerListThemeFontFamily">Microsoft Segoe UI</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
